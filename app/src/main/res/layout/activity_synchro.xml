<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="5dp"
    android:background="#ff24088f">

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Synchronisation auto"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="18dp" />

    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/button3"
        android:background="#ff24088f"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retour10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="Ok"
        android:id="@+id/buttonRecup"
        android:background="#ff5e6eff"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:ellipsize="end"
        android:clickable="true"
        android:onClick="recup"

        android:layout_alignTop="@+id/textView15"
        android:layout_alignEnd="@+id/mySwitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Récuperer les données manuellement"
        android:id="@+id/textView15"
        android:textColor="#ffffffff"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/mySwitch"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

</RelativeLayout>