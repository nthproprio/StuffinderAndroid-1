<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stuffinder.activities.LocalisationActivity"
    android:background="#ff24088f">

    <Button
        style="@android:style/MediaButton.Previous"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="Retour"
        android:id="@+id/button2"
        android:background="#ff24088f"
        android:textColor="#ffffffff"
        android:textSize="10dp"
        android:onClick="retour9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPosition"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomObj"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_above="@+id/textViewPosition"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="Retenter"
        android:id="@+id/buttonRetenter"
        android:background="#ff5e6eff"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:textColor="#ffffffff"
        android:textStyle="normal"
        android:textSize="18dp"
        android:ellipsize="end"
        android:onClick="retenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:text="Son"
        android:textColor="#ffffffff"
        android:id="@+id/toggleButtonSon"
        android:background="#ff5e6eff"
        android:checked="false"
        android:layout_alignBottom="@+id/buttonRetenter"
        android:layout_alignParentStart="true"
        android:onClick="onSon"
        android:textOff="Son Off"
        android:textOn="Son On" />

    <ToggleButton
        android:layout_width="63dp"
        android:layout_height="40dp"
        android:text="Led"
        android:textColor="#ffffffff"
        android:id="@+id/toggleButtonLed"
        android:background="#ff5e6eff"
        android:checked="false"
        android:layout_above="@+id/buttonRetenter"
        android:layout_alignParentStart="true"
        android:onClick="onLed"
        android:textOff="Led Off"
        android:textOn="Led On" />

</RelativeLayout>
